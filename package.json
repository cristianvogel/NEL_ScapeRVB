{
  "name": "ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",    
    "copyCablesAssets" : "cpy cables-ui/assets/**/* public/assets",
    "copyManifest": "cpy public/manifest.json src",
    "predev": "npm run clean && npm run copyCablesAssets && npm run copyManifest",
    "prebuild": "npm run clean && npm run copyCablesAssets && npm run copyManifest",
    "dev": "npm run dev-native && concurrently \"npm run dev-cables-ui\" \"npm run dev-dsp\" \"vite\"",
    "dev-native": "zx scripts/build-native.mjs --dev",
    "dev-dsp": "esbuild dsp/main.ts --watch --bundle --outfile=public/dsp.main.js ",
    "dev-cables-ui": "esbuild cables-ui/js/patch.js  --outfile=public/patch.js",
    "build-cables-ui": "esbuild cables-ui/js/patch.js --outfile=public/patch.js",
    "dev-ui": "vite",
    "build-native": "zx scripts/build-native.mjs",
    "build-dsp": "esbuild dsp/main.ts --bundle --outfile=public/dsp.main.js",
    "build-ui": "vite build",
    "build": "npm run build-native && concurrently \"npm run build-dsp\"  \"npm run build-cables-ui\"  ",
    "preview": "vite preview"
  },
  "dependencies": {
    "@elemaudio/core": "^3.0.0",
    "@thi.ng/equiv": "^2.1.61",
    "@thi.ng/ramp": "3.1.30",
    "@thi.ng/vectors": "7.11.6",
    "cpy-cli": "^4.2.0",
    "esbuild": "^0.17.8",
    "invariant": "^2.2.4",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^5.0.0",
    "svelte-hmr": "^0.16.0",
    "worker-timers": "^8.0.2",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.24",
    "svelte": "^5.0.0-next.184",
    "tailwindcss": "^3.3.2",
    "vite": "^5.0.0",
    "zx": "^7.2.3"
  }
}
